					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.token) {",
									"        pm.environment.set('jwt_token', response.data.token);",
									"        console.log('JWT Token saved:', response.data.token);",
									"    }",
									"}"
								],
